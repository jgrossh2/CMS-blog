<div class="wrapper">
  {{#if posts.length}}
  <main>
    <h1><a href="/dashboard">Your Dashboard</a></h1>
      {{#each posts as |post|}}
      <article class="post">
        <div class="card border-dark">
        <div class="card-header text-light bg-dark">
            <a href='/dashboard/edit/{{id}}'>{{title}}</a>
            <span>Posted By {{post.user.username}} on {{format_date createdAt}}</span>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
            <p>{{post.body_text}}</p>
            </blockquote>
        </div>
        </div>
      </article> 
      {{/each}}
  </main>
  {{/if}}


