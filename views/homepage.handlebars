<main class="post-list">
    <!--declaring post variable name for subsequent placeholder-->
    {{#each posts}}
    <article class='card'>
      <div class="card-header">
        <h2>
          <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <div>
        Posted by {{user.username}} on {{format_date createdAt}}
        </div>
      </div>
      <div class="card-body">
            <blockquote class="blockquote mb-0">
            <p>{{body_text}}</p>
            </blockquote>
      </div>
      {{!-- <div class="card-body">
        {{body}}
      </div> --}}
    </article>
    {{/each}}
</main>

