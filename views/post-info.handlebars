<article class="post">
    <div class="card border-dark">
        <div class="card-header text-light bg-dark">
            <span>{{post.title}}</span>
            <span>Posted By {{post.user.username}} on {{format_date post.createdAt}}</span>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
            <p>{{post.body_text}}</p>
            </blockquote>
        </div>
    </div>
</article>

{{#if post.comments}}
<div class="post">
  <form class="card comment-form">
    <div class="card-header">
      <h4>Comments</h4>
    </div>

    <div class="card-body">
      {{#each post.comments}}
      <div>
        <p> {{comment_text}} </p>
        <p> --{{user.username}}, {{format_date createdAt}}</p>
      </div>
      {{/each}}
    </div>
  </form>
{{/if}}

{{#if loggedIn}}
 <article  class="card" >
   <div class="card-header">
     <h4>Add comment</h4>
   </div>

   <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}">
      <label class="form-label" for="comment-body">Comment</label>
      <input name="comment-body" class="form-input">
      <div id="new-comment-form" class="btn">
            <button type="submit">Submit</button>
      </div>
      
   </div>
 </article>
 {{/if}}
</div>

<script src="/javascript/comment.js"></script>