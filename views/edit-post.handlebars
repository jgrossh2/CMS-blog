<article class="edit-post-form">
    <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
        <div class="card border-dark">
        <div class="card-header text-light bg-dark">
            <input name="post-title" type="text" value="{{post.title}}" />
            <span>Posted By {{post.user.username}} on {{post.createdAt}}</span>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
            <input name="post-body" type="text" value="{{post.body_text}}" />
            </blockquote>
      {{!-- {{> comments post.comments}} --}}
        </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
    </div>
</article>

